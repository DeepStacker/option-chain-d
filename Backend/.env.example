# ═══════════════════════════════════════════════════════════════════
# Stockify Trading Platform - Environment Configuration
# Copy this file to .env and update the values
# ═══════════════════════════════════════════════════════════════════

# Application Settings
APP_NAME="Stockify Trading Platform"
APP_VERSION="2.0.0"
APP_ENV=development  # development, staging, production
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Origins (comma-separated for multiple)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000"]

# ═══════════════════════════════════════════════════════════════════
# Database (PostgreSQL)
# ═══════════════════════════════════════════════════════════════════
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/stockify
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# ═══════════════════════════════════════════════════════════════════
# Redis Cache
# ═══════════════════════════════════════════════════════════════════
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300
REDIS_OPTIONS_CACHE_TTL=5
REDIS_EXPIRY_CACHE_TTL=3600

# ═══════════════════════════════════════════════════════════════════
# Firebase Authentication
# ═══════════════════════════════════════════════════════════════════
FIREBASE_CREDENTIALS_PATH=credentials/firebase_credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# ═══════════════════════════════════════════════════════════════════
# Dhan API Settings
# ═══════════════════════════════════════════════════════════════════
DHAN_API_BASE_URL=https://scanx.dhan.co/scanx
DHAN_OPTIONS_CHAIN_ENDPOINT=/optchain
DHAN_SPOT_ENDPOINT=/rtscrdt
DHAN_FUTURES_ENDPOINT=/futoptsum
DHAN_API_TIMEOUT=30
DHAN_API_RETRY_COUNT=3
DHAN_API_RETRY_DELAY=1.0

# ═══════════════════════════════════════════════════════════════════
# Rate Limiting
# ═══════════════════════════════════════════════════════════════════
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ═══════════════════════════════════════════════════════════════════
# WebSocket Settings
# ═══════════════════════════════════════════════════════════════════
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000
WS_BROADCAST_INTERVAL=1.0

# ═══════════════════════════════════════════════════════════════════
# Trading Defaults
# ═══════════════════════════════════════════════════════════════════
DEFAULT_RISK_FREE_RATE=0.10
DEFAULT_SYMBOL=NIFTY

# ═══════════════════════════════════════════════════════════════════
# Logging
# ═══════════════════════════════════════════════════════════════════
LOG_LEVEL=INFO
